generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model MenuItem {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  category    String?
  available   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Reservation {
  id         Int      @id @default(autoincrement())
  name       String
  phone      String?
  email      String?
  guests     Int
  date       DateTime
  table      Int?
  status     String   @default("confirmed") // confirmed | canceled | completed
  createdAt  DateTime @default(now())
}
